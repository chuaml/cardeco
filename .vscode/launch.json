    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "stopOnEntry": false
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "stopOnEntry": true,
            "runtimeExecutable": "php.exe",
            "xdebugSettings": {
                "max_children": 256,
                "max_data": 1024,
                "show_hidden": 1
            }
            
        }
    ]
}