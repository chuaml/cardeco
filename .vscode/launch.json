    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "stopOnEntry": false
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000,
            "stopOnEntry": true,
            "runtimeExecutable": "H:\\wamp64\\bin\\php\\php7.4.9\\php.exe",
            "xdebugSettings": {
                "max_children": 256,
                "max_data": 1024,
                "show_hidden": 1
            }
            
        }
    ]
}